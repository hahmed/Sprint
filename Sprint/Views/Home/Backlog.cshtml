@model Sprint.Models.BacklogViewModel
<div class="text-md-center m-b-3">
    <h2>
        <span class="mega-octicon octicon-git-commit"></span>Sprint:  <a href="@Model.Repository.HtmlUrl"><strong>@Model.Repository.FullName</strong></a>
        <a href="/" class="btn btn-sm btn-primary-outline">All repos</a>
    </h2>
</div>
<div>
    <div class="row">
        <ul class="nav nav-pills nav-stacked col-sm-2">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("List", "Home")">Current Sprint</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Action("Backlog", "Home")">Backlog</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Roadmap</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Releases</a>
            </li>
        </ul>
        <div class="col-sm-10">
            <div class="card card-block m-a-3 p-a-3">
                <ul class="list-group all-open-issues  list-group-flush">
                    @foreach (var item in Model.OpenSprintIssues)
                    {
                        <li class="list-group-item">
                            <a href="@Url.Action("AddIssue", new { ownerName = Model.Repository.Owner.Login, repoName = Model.Repository.Name, issueId = item.Number })" 
                               class="text-primary"><span class="octicon octicon-plus"></span></a>
                            <a href="@item.HtmlUrl">#@item.Number</a> <span>@item.Title</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>